{
  "dataModel": "patient",

  "title": { "function": "!this.name ? 'New form' : 'Editing form'" },

  "defaultProperties": {
    "autoGenerated": { "function": "typeof this.sqlCondition === 'string' " },
    "active": true
  },

  "controls": [
    {
      "property": "name",
      "type": "personName",
      "label": "${Patient.name}",
      "required": true,
      "size": { "md": 6 }
    },
    {
      "property": "birthDate",
      "type": "date",
      "size": { "md": 6 },
      "newRow": true
    },
    {
      "property": "gender",
      "type": "select",
      "size": { "md": 6 }
    },
    {
      "property": "customId",
      "type": "string",
      "visible": { "function": "this.gender === 'MALE'" },
      "size": { "md": 6 }
    },
    {
      "property": "medicine",
      "label": "${Medicine}",
      "type": "select",
      "options": "medicines",
      "size": { "md": 6 },
      "newRow": true
    }
  ],

  "validators": [
    {
      "rule": "this.customId !== 'banana'",
      "message": "banana: ${NotValid}"
    }
  ]
}